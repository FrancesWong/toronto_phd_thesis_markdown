@article{wolkowitz_double-blind_1999,
  title = {Double-blind treatment of major depression with dehydroepiandrosterone},
  volume = {156},
  issn = {0002-953X},
  abstract = {OBJECTIVE: This study was designed to assess possible antidepressant effects of dehydroepiandrosterone (DHEA), an abundant adrenocortical hormone in humans.
