@article{sonuga-barke_nonpharmacological_2013,
  title = {Nonpharmacological {{Interventions}} for {{ADHD}}: {{Systematic Review}} and {{Meta-Analyses}} of {{Randomized Controlled Trials}} of {{Dietary}} and {{Psychological Treatments}}},
