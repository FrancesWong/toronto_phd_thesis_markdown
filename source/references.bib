  number = {2},
  urldate = {2012-08-27},
  journal = {J Neurophysiol},
  author = {Dong, Wei and Lee, Ryan H. and Xu, Heng and Yang, Shelley and Pratt, Kara G. and Cao, Vania and Song, Yoon-Kyu and Nurmikko, Arto and Aizenman, Carlos D.},
