@article{do_vale_relationship_2014,
  title = {The {{Relationship}} between {{Dehydroepiandrosterone}} ({{DHEA}}), {{Working Memory}} and {{Distraction}} \textendash{} {{A Behavioral}} and {{Electrophysiological Approach}}},
