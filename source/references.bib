  journal = {Adv Neurol},
  author = {Knight, R T and Grabowecky, M F and Scabini, D},
  year = {1995},
  keywords = {Animals,Attention,Humans,Prefrontal Cortex},
  pages = {21--34; discussion 34--36},
  pmid = {7771302}
}

