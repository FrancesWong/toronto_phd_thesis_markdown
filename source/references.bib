@article{volk_pkm-_2013,
  title = {{{PKM}}-\ensuremath{\zeta} is not required for hippocampal synaptic plasticity, learning and memory},
  copyright = {\textcopyright{} 2012 Nature Publishing Group, a division of Macmillan Publishers Limited. All Rights Reserved.},
  issn = {0028-0836},
  doi = {10.1038/nature11802},
  abstract = {Long-term potentiation (LTP), a well-characterized form of synaptic plasticity, has long been postulated as a cellular correlate of learning and memory. Although LTP can persist for long periods of time, the mechanisms underlying LTP maintenance, in the midst of ongoing protein turnover and synaptic activity, remain elusive. Sustained activation of the brain-specific protein kinase C (PKC) isoform protein kinase M-\ensuremath{\zeta} (PKM-\ensuremath{\zeta}) has been reported to be necessary for both LTP maintenance and long-term memory. Inhibiting PKM-\ensuremath{\zeta} activity using a synthetic zeta inhibitory peptide (ZIP) based on the PKC-\ensuremath{\zeta} pseudosubstrate sequence reverses established LTP in vitro and in vivo. More notably, infusion of ZIP eliminates memories for a growing list of experience-dependent behaviours, including active place avoidance, conditioned taste aversion, fear conditioning and spatial learning. However, most of the evidence supporting a role for PKM-\ensuremath{\zeta} in LTP and memory relies heavily on pharmacological inhibition of PKM-\ensuremath{\zeta} by ZIP. To further investigate the involvement of PKM-\ensuremath{\zeta} in the maintenance of LTP and memory, we generated transgenic mice lacking PKC-\ensuremath{\zeta} and PKM-\ensuremath{\zeta}. We find that both conventional and conditional PKC-\ensuremath{\zeta}/PKM-\ensuremath{\zeta} knockout mice show normal synaptic transmission and LTP at Schaffer collateral\textendash{}CA1 synapses, and have no deficits in several hippocampal-dependent learning and memory tasks. Notably, ZIP still reverses LTP in PKC-\ensuremath{\zeta}/PKM-\ensuremath{\zeta} knockout mice, indicating that the effects of ZIP are independent of PKM-\ensuremath{\zeta}.},
  language = {en},
  timestamp = {2013-01-05T20:56:47Z},
