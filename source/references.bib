@article{price_altered_2014,
  title = {Altered synaptic structure in the hippocampus in a mouse model of {{Alzheimer}}'s disease with soluble amyloid-\ensuremath{\beta} oligomers and no plaque pathology},
  volume = {9},
  issn = {1750-1326},
  doi = {10.1186/1750-1326-9-41},
  abstract = {BACKGROUND: Mounting evidence suggests that soluble oligomers of amyloid-\ensuremath{\beta} (oA\ensuremath{\beta}) represent the pertinent synaptotoxic form of A\ensuremath{\beta} in sporadic Alzheimer's disease (AD); however, the mechanistic links between oA\ensuremath{\beta} and synaptic degeneration remain elusive. Most in vivo experiments to date have been limited to examining the toxicity of oA\ensuremath{\beta} in mouse models that also possess insoluble fibrillar A\ensuremath{\beta} (fA\ensuremath{\beta}), and data generated from these models can lead to ambiguous interpretations. Our goal in the present study was to examine the effects of soluble oA\ensuremath{\beta} on neuronal and synaptic structure in the amyloid precursor protein (APP) E693Q ("Dutch") mouse model of AD, which develops intraneuronal accumulation of soluble oA\ensuremath{\beta} with no detectable plaques in AD-relevant brain regions. We performed quantitative analyses of neuronal pathology, including dendrite morphology, spine density, and synapse ultrastructure in individual hippocampal CA1 neurons.
RESULTS: When assessing neuronal morphology and complexity we observed significant alterations in apical but not in basal dendritic arbor length in Dutch mice compared to wild type. Moreover, Dutch mice exhibited a significant decrease in dendritic arborization with a decrease in dendritic length and number of intersections at 120 \ensuremath{\mu}m and 150 \ensuremath{\mu}m from the soma, respectively. We next examined synaptic parameters and found that while there were no differences in overall synaptic structure, Dutch mice displayed a significant reduction in the post-synaptic density (PSD) length of synapses on mushroom spines, in comparison to wild type littermates.
