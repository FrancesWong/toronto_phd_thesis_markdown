  timestamp = {2015-06-09T13:54:40Z},
  journal = {Brain Struct Funct},
  author = {Kim, D. and Samarth, P. and Feng, F. and Pare, D. and Nair, Satish S.},
  month = apr,
  year = {2015},
  pmid = {25859631}
}

